<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>License no</th>
      <th>Style</th>
      <th>Location</th>
      <th>Manufacturer</th>
      <th>Status</th>
      <th>Hourly rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.license_no %></td>
        <td><%= car.style %></td>
        <td><%= car.location %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.status %></td>
        <td><%= car.hourly_rate %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Reserve', new_reservation_url(car), data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

