    <h1>Cars</h1>
    <table class="table table-bordered">
      <thead >
      <thead>
      <tr>
        <th>id</th>
        <th>Model</th>
        <th>License no</th>
        <th>Style</th>
        <th>Location</th>
        <th>Manufacturer</th>
        <th>Status</th>
        <th>Hourly rate</th>
        <th colspan="3"></th>
      </tr>
      </thead>


      <tbody>
      <% @cars.each do |car| %>
          <%car.available?%>
          <tr>
            <td><%= car.id %></td>
            <td><%= car.model %></td>
            <td><%= car.license_no %></td>
            <td><%= car.style %></td>
            <td><%= car.location %></td>
            <td><%= car.manufacturer %></td>
            <td><%= car.status %></td>
            <td><%= car.hourly_rate %></td>
            <td><%= link_to 'Show', car %></td>
            <% if car.status == "Available"%>
                <td><%= link_to 'Reserve', new_reservation_url(:license_no => car.license_no, :car_id => car.id), data: { confirm: 'Are you sure' } %></td>
            <%end%>
          </tr>
      <% end %>
      </tbody>
    </table>


